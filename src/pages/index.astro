---
import MainLayout from "../layouts/MainLayout.astro";
import GameCard from "../components/GameCard.astro";
import games from "../../data/games.json";
---

  <MainLayout title="Free Online Games" description="Play the best free online games like Poki & CrazyGames!">

  <main class="w-full mx-auto px-6 py-10">
      <!-- Removed the "Play Free Games" heading as per user request -->

      <div class="grid grid-flow-dense grid-cols-6 auto-rows-[150px] gap-4">
      {games.map((game, index) => {
        // Generate random col and row spans between 1 and 2
        const colSpan = Math.floor(Math.random() * 2) + 1;
        const rowSpan = Math.floor(Math.random() * 2) + 1;
        // For the first card, pass null for game to render empty card
        if (index === 0) {
          return <GameCard game={null} colSpan={colSpan} rowSpan={rowSpan} overrideImage={null} />;
        }
        const overrideImage = null;
        return <GameCard game={game} colSpan={colSpan} rowSpan={rowSpan} overrideImage={overrideImage} />;
      })}
    </div>

    <!-- New categories section added as per user request -->
    <section class="p-6 mt-10 rounded-lg">
      <div class="grid grid-cols-6 gap-4">
        <div class="bg-yellow-300 rounded-lg flex items-center justify-center text-center font-bold text-lg text-black p-4 cursor-pointer">
          <span class="text-6xl">🎮</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🧠</span>
          <span>Brainrot Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">👾</span>
          <span>Obby Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">⚽</span>
          <span>Soccer Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">📱</span>
          <span>Mobile Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🤝</span>
          <span>Co-op Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🗺️</span>
          <span>Adventure Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🕹️</span>
          <span>Platform Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🔥</span>
          <span>Action Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🏎️</span>
          <span>Car Racing Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🕹️</span>
          <span>Arcade Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">3️⃣</span>
          <span>3D Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🎯</span>
          <span>Skill Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">👦</span>
          <span>Games for Boys</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🌐</span>
          <span>.io Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🎮</span>
          <span>New Category</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🏆</span>
          <span>Popular Games</span>
        </div>
        <div class="bg-white rounded-lg p-4 flex flex-col items-center cursor-pointer">
          <span class="text-4xl mb-2">🖱️</span>
          <span>Mouse Games</span>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
