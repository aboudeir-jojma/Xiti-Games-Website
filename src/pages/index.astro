  background: white;
  color: black;
  padding: 40px;
  border-radius: 20px;
  margin: 60px auto;
  margin-top: 0px;
  max-width: 1500px;
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

/* 🌟 Catégories */
